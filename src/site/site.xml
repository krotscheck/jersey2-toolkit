<project name="${project.name}">

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.1.1</version>
    </skin>

    <bannerLeft>
        <name>jersey2-toolkit</name>
    </bannerLeft>

    <body>    <!-- Add a rel to Google profile for all pages -->
        <head>
            <link rel="author"
                  href="https://plus.google.com/+MichaelKrotscheck"/>
        </head>

        <links>
            <item name="GitHub project"
                  href="http://github.com/krotscheck/jersey2-toolkit/"/>
        </links>

        <menu name="Main">
            <item name="Home"
                  href="index.html"/>
            <item name="GitHub Project"
                  href="http://github.com/krotscheck/jersey2-toolkit/"/>
            <item name="Release Notes"
                  href="release-notes.html"/>
        </menu>

        <menu name="Features">
            <item name="jersey2-util"
                  href="jersey2-util.html"/>
            <item name="jersey2-configuration"
                  href="jersey2-configuration.html"/>
            <item name="jersey2-hibernate"
                  href="jersey2-hibernate.html"/>
            <item name="jersey2-vfs2"
                  href="jersey2-vfs2.html"/>
        </menu>

        <menu name="Contribute">
            <item name="Contribute"
                  href="contribute.html"/>
            <item name="Issues"
                  href="https://github.com/krotscheck/jersey2-toolkit/issues/"/>
            <item name="Fork on GitHub"
                  href="http://github.com/krotscheck/jersey2-toolkit/"/>
            <item name="License"
                  href="license.html"/>
        </menu>

        <menu ref="modules"/>
        <menu ref="reports"/>
    </body>


    <!--<publishDate position="bottom" format="yyyy-MM-dd"/>-->
    <version position="bottom"/>

    <custom>
        <reflowSkin>
            <markPageHeader>false</markPageHeader>
            <skinAttribution>false</skinAttribution>
            <protocolRelativeURLs>false</protocolRelativeURLs>
            <smoothScroll>true</smoothScroll>
            <theme>bootswatch-cosmo</theme>
            <highlightJs>true</highlightJs>
            <highlightJsTheme>github</highlightJsTheme>
            <absoluteResourceURL>
                https://krotscheck.github.io/jersey2-toolkit
            </absoluteResourceURL>
            <brand>
                <href>https://krotscheck.github.io/jersey2-toolkit</href>
            </brand>
            <slogan>Useful Jersey2 Features</slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>false</toc>
            <breadcrumbs>false</breadcrumbs>
            <tocTopMax>6</tocTopMax>

            <topNav>Features|Contribute</topNav>

            <bottomNav maxSpan="12">
                <column>Main</column>
                <column>Contribute</column>
                <column>Features</column>
                <column>reports</column>
            </bottomNav>

            <pages>
                <index project="jersey2-toolkit">
                    <titleTemplate>jersey2-toolkit</titleTemplate>

                    <sections>
                        <body/>
                        <body/>
                        <sidebar/>
                    </sections>
                </index>


                <!-- Disable source highlighting for Maven reports -->
                <source-repository>
                    <highlightJs>false</highlightJs>
                </source-repository>

                <issue-tracking>
                    <highlightJs>false</highlightJs>
                </issue-tracking>

                <license>
                    <highlightJs>false</highlightJs>
                </license>
            </pages>
        </reflowSkin>
    </custom>


    <googleAnalyticsAccountId>UA-52636237-1</googleAnalyticsAccountId>
</project>